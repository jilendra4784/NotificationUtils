<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@mipmap/spc_logo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/img_icon"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Your Registered Your Registered Your Registered Your Registered"
        android:textColor="#F9DB22"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_promo_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:background="@mipmap/place_holder"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/iv_promo_image"
        android:gravity="center"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Your Registered Your Registered Your Registered Your Registered"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_full_description"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:text="Jila "
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/tv_title"/>


    <ImageView
        android:id="@+id/iv_full_imageView"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"
        android:scaleType="fitXY"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="70dp"
        android:paddingVertical="10dp">


        <ImageView
            android:id="@+id/btn_close_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:src="@mipmap/close"
            android:text="Launch App"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_close_app"
            android:text="Close"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/btn_launch_app"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:src="@mipmap/open"
            android:text="Launch App"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_launch_app"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:text="Play"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"

            />


    </RelativeLayout>


</RelativeLayout>